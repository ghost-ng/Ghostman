<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<assembly xmlns="urn:schemas-microsoft-com:asm.v1" manifestVersion="1.0">
  
  <!-- Application Identity -->
  <assemblyIdentity
    version="0.1.0.0"
    processorArchitecture="*"
    name="com.ghostmanteam.ghostman"
    type="win32"
  />
  
  <!-- Application Description -->
  <description>Ghostman - AI-powered desktop overlay application for enhanced productivity</description>
  
  <!-- Trust Information - No Admin Privileges Required -->
  <trustInfo xmlns="urn:schemas-microsoft-com:asm.v3">
    <security>
      <requestedPrivileges>
        <!-- 
          asInvoker: Run with current user privileges (no UAC prompt)
          requireAdministrator: Would require admin rights (UAC prompt)
          highestAvailable: Use highest available privileges
        -->
        <requestedExecutionLevel
          level="asInvoker"
          uiAccess="false"
        />
      </requestedPrivileges>
    </security>
  </trustInfo>
  
  <!-- Windows Compatibility Information -->
  <compatibility xmlns="urn:schemas-microsoft-com:compatibility.v1">
    <application>
      <!-- Windows 11 -->
      <supportedOS Id="{8e0f7a12-bfb3-4fe8-b9a5-48fd50a15a9a}"/>
      <!-- Windows 10 -->
      <supportedOS Id="{8e0f7a12-bfb3-4fe8-b9a5-48fd50a15a9a}"/>
      <!-- Windows 8.1 -->
      <supportedOS Id="{1f676c76-80e1-4239-95bb-83d0f6d0da78}"/>
      <!-- Windows 8 -->
      <supportedOS Id="{4a2f28e3-53b9-4441-ba9c-d69d4a4a6e38}"/>
